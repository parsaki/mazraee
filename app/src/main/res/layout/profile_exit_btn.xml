<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/profile_exit_btn"
        android:layout_width="@dimen/_60sdp"
        android:layout_height="@dimen/_24sdp"
        android:textColor="@color/calypso"
        android:text="@string/exit"
        android:fontFamily="@font/sahel"
        android:textSize="@dimen/_11sdp"
        android:paddingEnd="@dimen/_10sdp"
        android:textAlignment="center"
        android:background="@drawable/profile_exti"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />
    <ImageView
        android:layout_width="@dimen/_11sdp"
        android:layout_height="@dimen/_11sdp"
        android:src="@drawable/power"
        android:translationZ="10dp"
        android:layout_marginEnd="@dimen/_10sdp"
        app:layout_constraintEnd_toEndOf="@id/profile_exit_btn"
        app:layout_constraintTop_toTopOf="@id/profile_exit_btn"
        app:layout_constraintBottom_toBottomOf="@id/profile_exit_btn"/>
</androidx.constraintlayout.widget.ConstraintLayout>