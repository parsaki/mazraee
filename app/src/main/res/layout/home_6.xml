<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/home6.toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_53sdp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/actiontoolbar" />

    <TextView
        android:id="@+id/home6_tooltext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sahel"
        android:textSize="@dimen/_14sdp"
        android:textColor="@color/white"
        android:text="@string/consatre_sabt"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/home6.toolbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageButton
        android:id="@+id/home6.back"
        android:layout_width="@dimen/_17sdp"
        android:layout_height="@dimen/_23sdp"
        android:background="@color/calypso"
        android:layout_marginStart="@dimen/_20sdp"
        app:srcCompat="@drawable/back"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/home6.toolbar"
        />
    <ImageButton
        android:id="@+id/home6.info"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_25sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:scaleType="fitXY"
        android:background="@color/calypso"
        android:src="@drawable/info"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/home6.toolbar"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/home6.toolbar">
        <include
            android:id="@+id/home6.include"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            layout="@layout/home6_scroll"></include>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>