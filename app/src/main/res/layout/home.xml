<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/home.toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_53sdp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/actiontoolbar" />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/home.recycle"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/_16sdp"
        app:layout_constraintTop_toBottomOf="@id/home.toolbar"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sahel"
        android:textSize="@dimen/_14sdp"
        android:textColor="@color/white"
        android:text="@string/frag_modiriatmzraee"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/home.toolbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageButton
        android:id="@+id/home.back"
        android:layout_width="@dimen/_17sdp"
        android:layout_height="@dimen/_23sdp"
        android:background="@color/calypso"
        android:layout_marginStart="@dimen/_20sdp"
        app:srcCompat="@drawable/back"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/home.toolbar"
         />

</androidx.constraintlayout.widget.ConstraintLayout>