<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/rcdata1.guid1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.36" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/rcdata1.guid2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.525" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/rcdata1.guid3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.73" />
    <EditText
        android:id="@+id/rcdata1.text1"
        android:layout_width="0dp"
        android:layout_height="@dimen/_22sdp"
        android:paddingHorizontal="@dimen/_7sdp"
        android:textSize="@dimen/_16sdp"
        android:textColor="@color/blue_zodiac"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:gravity="center"
        android:layout_marginEnd="@dimen/_10sdp"
        android:inputType="number"
        android:background="@drawable/edittext2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="@id/rcdata1.guid1"/>
    <TextView
        android:id="@+id/rcdata1.text2"
        android:layout_width="0dp"
        android:layout_height="@dimen/_22sdp"
        android:paddingHorizontal="@dimen/_7sdp"
        android:textSize="@dimen/_15sdp"
        android:textColor="@color/blue_zodiac"
        android:layout_marginStart="@dimen/_2sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:gravity="center"

        android:background="@drawable/edittext4"
        android:layout_marginEnd="@dimen/_3sdp"
        android:inputType="number"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="@id/rcdata1.guid1"
        app:layout_constraintEnd_toEndOf="@id/rcdata1.guid2"/>
    <EditText
        android:id="@+id/rcdata1.text3"
        android:layout_width="0dp"
        android:layout_height="@dimen/_22sdp"
        android:paddingHorizontal="@dimen/_7sdp"
        android:textColor="@color/blue_zodiac"
        android:layout_marginStart="@dimen/_3sdp"
        android:layout_marginEnd="@dimen/_2sdp"
        android:textSize="@dimen/_16sdp"
        android:gravity="center"

        android:layout_marginTop="@dimen/_10sdp"
        android:inputType="number"
        android:background="@drawable/edittext2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="@id/rcdata1.guid2"
        app:layout_constraintEnd_toEndOf="@id/rcdata1.guid3"/>
    <EditText
        android:id="@+id/rcdata1.text4"
        android:layout_width="0dp"
        android:layout_height="@dimen/_22sdp"
        android:gravity="center"

        android:paddingHorizontal="@dimen/_7sdp"

        android:textColor="@color/blue_zodiac"
        android:layout_marginStart="@dimen/_2sdp"
        android:layout_marginEnd="@dimen/_4sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:textSize="@dimen/_16sdp"
        android:background="@drawable/edittext2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="@id/rcdata1.guid3"
        app:layout_constraintEnd_toEndOf="parent"/>
    <ImageButton
        android:id="@+id/rcdata1.pluse"
        android:src="@drawable/plus"
        android:scaleType="fitXY"
        android:translationZ="10dp"
        android:background="@color/white"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_12sdp"
        android:layout_marginEnd="@dimen/_4sdp"
        app:layout_constraintTop_toBottomOf="@id/rcdata1.text4"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>