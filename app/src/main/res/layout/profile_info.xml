<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/profile.text_v_info1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_99sdp"
        android:fontFamily="@font/sahel"
        android:gravity="center"
        android:text="@string/info1"
        android:textColor="@color/dove_gray"
        android:textSize="@dimen/_9sdp"
        app:layout_constraintBottom_toTopOf="@id/profile.text_v_info2" />

    <TextView
        android:id="@+id/profile.text_v_info2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_4sdp"
        android:fontFamily="@font/sahel"
        android:gravity="center"
        android:text="شرکت"
        android:textColor="@color/dove_gray"
        android:textSize="@dimen/_9sdp"
        app:layout_constraintBottom_toTopOf="@id/profile.text_v_info4"
        app:layout_constraintStart_toEndOf="@id/profile.text_v_info3" />

    <TextView
        android:id="@+id/profile.text_v_info6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_4sdp"
        android:fontFamily="@font/sahel"
        android:gravity="center"
        android:text="است"
        android:textColor="@color/dove_gray"
        android:textSize="@dimen/_9sdp"
        app:layout_constraintBottom_toTopOf="@id/profile.text_v_info4"
        app:layout_constraintEnd_toStartOf="@id/profile.text_v_info3" />

    <TextView
        android:id="@+id/profile.text_v_info3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sahel"
        android:gravity="center"
        android:text="@string/info3"
        android:textColor="@color/calypso"
        android:textSize="@dimen/_9sdp"
        android:translationZ="10dp"
        app:layout_constraintBottom_toTopOf="@id/profile.text_v_info4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/profile.text_v_info4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sahel"
        android:gravity=""
        android:paddingStart="@dimen/_2sdp"
        android:text="توسعه این اپ توسط شرکت"
        android:textColor="@color/dove_gray"
        android:textSize="@dimen/_9sdp"
        android:translationZ="10dp"
        app:layout_constraintStart_toStartOf="@id/info.guideline3"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <TextView
        android:id="@+id/profile.text_v_info5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sahel"
        android:gravity="center"
        android:paddingEnd="@dimen/_2sdp"
        android:text="Swantech.company"
        android:textColor="@color/calypso"
        android:textSize="@dimen/_9sdp"
        android:translationZ="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/info.guideline3"
        />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/info.guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.445" />
</androidx.constraintlayout.widget.ConstraintLayout>