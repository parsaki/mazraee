<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
   <androidx.constraintlayout.widget.Guideline
    android:id="@+id/rcdata2.guid1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:layout_constraintGuide_percent="0.3855" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/rcdata2.guid2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.6658" />
    <EditText
        android:id="@+id/rcdata2.text1"
        android:layout_width="0dp"
        android:layout_height="@dimen/_20sdp"
        android:paddingHorizontal="@dimen/_7sdp"
        android:textSize="@dimen/_16sdp"
        android:gravity="center"

        android:textColor="@color/blue_zodiac"
        android:layout_marginStart="@dimen/_7sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:background="@drawable/edittext2"
        android:inputType="number"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="@id/rcdata2.guid1"/>
    <EditText
        android:id="@+id/rcdata2.text2"
        android:layout_height="@dimen/_22sdp"
        android:paddingHorizontal="@dimen/_7sdp"
        android:textSize="@dimen/_16sdp"
        android:gravity="center"

        android:inputType="number"
        android:textColor="@color/blue_zodiac"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@drawable/edittext2"
        android:layout_marginEnd="@dimen/_9sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="@id/rcdata2.guid1"
        app:layout_constraintEnd_toEndOf="@id/rcdata2.guid2" android:layout_width="0dp"/>
    <EditText
        android:id="@+id/rcdata2.text3"
        android:layout_width="0dp"
        android:layout_height="@dimen/_20sdp"
        android:paddingHorizontal="@dimen/_7sdp"
        android:textSize="@dimen/_16sdp"
        android:gravity="center"

        android:textColor="@color/blue_zodiac"
        android:layout_marginStart="@dimen/_9sdp"
        android:layout_marginEnd="@dimen/_3sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@drawable/edittext2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="@id/rcdata2.guid2"
        app:layout_constraintEnd_toEndOf="parent"/>
    <ImageButton
        android:id="@+id/rcdata2.pluse"
        android:src="@drawable/plus"
        android:scaleType="fitXY"
        android:translationZ="10dp"
        android:background="@color/white"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_12sdp"
        android:layout_marginEnd="@dimen/_4sdp"
        app:layout_constraintTop_toBottomOf="@id/rcdata2.text3"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>