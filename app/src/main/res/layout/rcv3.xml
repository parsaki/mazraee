<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_10sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/rc_c.view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_90sdp"
        android:background="@drawable/card"
        android:layout_marginHorizontal="@dimen/_7sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <ImageView
        android:id="@+id/rc_c.image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="fitCenter"
        android:translationZ="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_14sdp"
        app:layout_constraintEnd_toEndOf="@id/rc_c.view"
        app:layout_constraintTop_toTopOf="@id/rc_c.view"
        app:layout_constraintBottom_toBottomOf="@id/rc_c.view"
        app:layout_constraintWidth_percent="0.2142"
        />
    <TextView
        android:id="@+id/rc_c.text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sahel"
        android:textSize="@dimen/_14sdp"
        android:textColor="@color/white"
        android:translationZ="@dimen/_10sdp"
        app:layout_constraintBottom_toBottomOf="@id/rc_c.view"
        app:layout_constraintStart_toStartOf="@id/rc_c.view"
        app:layout_constraintEnd_toEndOf="@id/rc_c.view"
        app:layout_constraintTop_toTopOf="@id/rc_c.view"/>
</androidx.constraintlayout.widget.ConstraintLayout>